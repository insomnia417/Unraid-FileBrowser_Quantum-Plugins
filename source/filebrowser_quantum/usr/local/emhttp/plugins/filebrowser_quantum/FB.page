  $protocol = "http";
  if (!empty($_SERVER['HTTP_X_FORWARDED_PROTO'])) {
      $protocol = $_SERVER['HTTP_X_FORWARDED_PROTO'];
  } elseif (!empty($_SERVER['HTTPS']) && $_SERVER['HTTPS'] !== 'off') {
      $protocol = "https";
  }
  
  $port = trim(exec("$DAEMON_SCRIPT GET_PORT"));
  if (empty($port) || !is_numeric($port)) { $port = "8081"; }
