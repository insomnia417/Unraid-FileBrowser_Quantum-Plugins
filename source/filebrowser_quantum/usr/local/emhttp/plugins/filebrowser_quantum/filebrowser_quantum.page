function saveConfig() {
    var content = $("#config_text").val();
    var enabled = $('input[name="webui_radio"]:checked').val(); 
    
    var btn = document.getElementById('SAVE_btn');
    btn.innerText = "SAVING...";
    btn.style.background = '#81c784';
    btn.style.color = '#fff';
    btn.style.borderColor = '#81c784';
    
    // UI Feedback: Visual Reset
    $("#save_status").text("Saving configuration...").css("color", "gray").show();
    
    // Only show "VERIFYING..." (3rd param true) if we are actually in Enabled mode
    updateServiceUI(false, $("#port_value").text(), (enabled === 'true')); 
    
    var postData = "content=" + encodeURIComponent(content) + "&enabled=" + enabled;

    $.ajax({
        url: "/plugins/filebrowser_quantum/api_config.php?action=save_config&t=" + new Date().getTime(),
        type: 'POST',
        data: postData, 
        success: function(response) {
            if (response.success) {
                // SUCCESS STATE
                btn.innerText = "SAVED ✔";
                btn.style.background = '#81c784';
                btn.style.color = '#fff';
                btn.style.borderColor = '#81c784';

                $("#save_status").text(response.message).css("color", "#81c784").show();
                
                setTimeout(function() { 
                    $("#save_status").fadeOut(); 
                    btn.innerText = "SAVE";
                    btn.style.background = '#f2f2f2'; 
                    btn.style.color = '#333'; 
                    btn.style.borderColor = '#ccc';
                }, 3000);
                
                window.defaultConfigText = content; 
                 
                var portMatch = content.match(/port:\s*(\d+)/);
                if (portMatch && portMatch[1]) {
                    var newPort = portMatch[1];
                    $("#port_value").text(newPort);
                }

                // ASYNC TRIGGER: Start polling just like the APPLY button
                const applyBtn = $("input[value='APPLY']");
                startPolling(null, applyBtn);
            } else {
                // FAILURE STATE
                btn.innerText = "FAILED ✘";
                btn.style.background = '#f44336';
                btn.style.color = '#fff';
                btn.style.borderColor = '#f44336';

                let errorMsg = response.message;
                if (response.data && response.data.details) {
                    $("#save_status").html("<b style='color:#f44336;'>Binary Validation Failed:</b><br><pre style='color:orange; font-size:10px; margin-top:5px; background:#fdfdfd; padding:5px; border:1px solid #ddd;'>" + response.data.details + "</pre>").show();
                } else {
                    $("#save_status").text(errorMsg).css("color", "#f44336").show();
                }

                setTimeout(function() {
                    btn.innerText = "SAVE";
                    // Only revert colors if no more unsaved changes (reset by onConfigInput)
                    // But here we just revert to original for consistency
                    btn.style.background = '#f2f2f2'; 
                    btn.style.color = '#333'; 
                    btn.style.borderColor = '#ccc';
                }, 3000);

                updateStatusViaAPI();
            }
        },
        error: function(xhr, status, error) {
            $("#save_status").text("Comm Error: " + error).css("color", "#f44336").show();
            btn.innerText = "SAVE";
            updateStatusViaAPI();
        }
    });
}

/**
 * Helper to force status sync from API
