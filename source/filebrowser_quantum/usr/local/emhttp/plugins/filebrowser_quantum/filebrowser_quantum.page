   $(window).once('focus', function() {
       window.location.reload();
   });
}

// 核心：每2秒从独立的 log.php 获取最新日志
function startLogTail() {
    setInterval(function() {
        const logLevel = $("select[name='log_level']").val();
        // 请求我们刚刚写好的动态 log.php
        $.get("/plugins/filebrowser_quantum/log.php", { log_level: logLevel }, function(data) {
            const logArea = document.querySelector('.log-area');
            if (logArea) {
                const isAtBottom = logArea.scrollHeight - logArea.scrollTop <= logArea.clientHeight + 50;
                logArea.innerHTML = data;
                if (isAtBottom) logArea.scrollTop = logArea.scrollHeight;
            }
        });
    }, 2000);
}

// 页面加载后立即启动
$(document).ready(function() {
    startLogTail();
