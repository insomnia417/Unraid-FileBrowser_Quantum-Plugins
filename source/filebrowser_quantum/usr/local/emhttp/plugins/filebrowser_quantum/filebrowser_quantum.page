function updateStatusViaAPI() {
    $.getJSON("/plugins/filebrowser_quantum/api_config.php?action=get_status&t=" + new Date().getTime(), function(response) {
        if (response.success) {
            const data = response.data;
            updateServiceUI(data.running, data.port);
        }
    });
}


